#include <stdio.h>
#include <stdlib.h>

// ---------------- STACK (Browser Back Button Example) ----------------

struct StackNode {
    int data;
    struct StackNode *next;
};

struct StackNode *top = NULL;

void push(int x) {
    struct StackNode *newNode = (struct StackNode*)malloc(sizeof(struct StackNode));
    newNode->data = x;
    newNode->next = top;
    top = newNode;
}

int pop() {
    if (top == NULL) {
        printf("Stack is empty!\n");
        return -1;
    }
    int val = top->data;
    struct StackNode *temp = top;
    top = top->next;
    free(temp);
    return val;
}

void displayStack() {
    struct StackNode *temp = top;
    printf("Stack (Top to Bottom): ");
    while (temp != NULL) {
        printf("%d ", temp->data);
        temp = temp->next;
    }
    printf("\n");
}

// ---------------- QUEUE (Ticket Counter Example) ----------------

struct QueueNode {
    int data;
    struct QueueNode *next;
};

struct QueueNode *front = NULL, *rear = NULL;

void enqueue(int x) {
    struct QueueNode *newNode = (struct QueueNode*)malloc(sizeof(struct QueueNode));
    newNode->data = x;
    newNode->next = NULL;

    if (rear == NULL) {
        front = rear = newNode;
        return;
    }

    rear->next = newNode;
    rear = newNode;
}

int dequeue() {
    if (front == NULL) {
        printf("Queue is empty!\n");
        return -1;
    }

    int val = front->data;
    struct QueueNode *temp = front;
    front = front->next;

    if (front == NULL)
        rear = NULL;

    free(temp);
    return val;
}

void displayQueue() {
    struct QueueNode *temp = front;
    printf("Queue (Front to Rear): ");
    while (temp != NULL) {
        printf("%d ", temp->data);
        temp = temp->next;
    }
    printf("\n");
}

// ---------------- MAIN MENU ----------------

int main() {
    int choice, val;

    do {
        printf("\n--- MENU ---\n");
        printf("1. Push (Stack - Browser Back Button)\n");
        printf("2. Pop (Stack)\n");
        printf("3. Display Stack\n");
        printf("4. Enqueue (Queue - Ticket Counter)\n");
        printf("5. Dequeue (Queue)\n");
        printf("6. Display Queue\n");
        printf("7. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {

            case 1:
                printf("Enter page number visited: ");
                scanf("%d", &val);
                push(val);
                break;

            case 2:
                val = pop();
                if (val != -1)
                    printf("Back to page: %d\n", val);
                break;

            case 3:
                displayStack();
                break;

            case 4:
                printf("Enter ticket number: ");
                scanf("%d", &val);
                enqueue(val);
                break;

            case 5:
                val = dequeue();
                if (val != -1)
                    printf("Ticket served: %d\n", val);
                break;

            case 6:
                displayQueue();
                break;

            case 7:
                printf("Exiting...\n");
                break;

            default:
                printf("Invalid choice!\n");
        }

    } while (choice != 7);

    return 0;
}
